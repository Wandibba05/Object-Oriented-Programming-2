public class Choices {
    public static void main(String[] args) {
        int Choice = 2;

        if (Choice == 1) {
            System.out.println("You chose option 1");
        } else if (Choice == 2) {
            System.out.println("You chose option 2");
        } else {
            System.out.println("Your choice is invalid");
        }
    }
}

